# i3 config file

# Set the Super key as my mod key.
set $mod Mod4

# Default font
# Workaround: Set font size to 0  to disable window title in tabbed and stacked mode
font pango:monospace 0

# Windows colors
# class                     border  backgr. text    indicator child_border
client.focused              #98c379 #98c379 #282c34 #98c379   #98c379
client.focused_inactive     #282c34 #282c34 #abb2bf #282c34   #282c34
client.unfocused            #282c34 #282c34 #abb2bf #282c34   #282c34
client.urgent               #e06c75 #e06c75 #abb2bf #e06c75   #e06c75

client.background           #282c34

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
#bindsym Mod4+d exec dmenu_run
bindsym Mod4+d exec --no-startup-id i3-dmenu-desktop --dmenu="/usr/bin/dmenu -i -l 5 -fn monospace-11 -nb '#282c34' -nf '#abb2bf' -sb '#98c379' -sf '#282c34'"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# focus follows mouse
focus_follows_mouse no

# delaying urgeny hint reset on workspace change
force_display_urgency_hint 2500 ms

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# switch to next/prev workspace
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# Disable window title
new_window pixel 4
new_float pixel 4

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# --------------------
# Custom mode
# --------------------

# system mode
mode "system" {
    # current session (e) exit (l) lock (r) reboot (p) poweroff
    bindsym e exec i3-msg exit
    bindsym l exec dm-tool lock
    bindsym r exec systemctl reboot
    bindsym p exec systemctl poweroff

    #back to normal mode by pressing Esc
    bindsym Escape mode "default"
}

bindsym $mod+s mode "system"

# resize mode
mode "resize" {
    # resize window (you can also use the mouse for that)
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # back to normal mode by pressing Esc
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# window mode
mode "window" {
    # change window display (s) horizontal/vertical split (t) tabbed
    bindsym s layout toggle split, mode "default"
    bindsym t layout tabbed, mode "default"
    bindsym f fullscreen toggle, mode "default"
    # back to normal mode by pressing Esc
    bindsym Escape mode "default"
}

bindsym $mod+w mode "window"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    # Custom separator symbol
    separator_symbol " "
    
    # Position of the bar on the screen [top|bottom]
    position top

    # Display informations in the bar
    status_command i3status

    # Font of the bar
    font pango:monospace 11

    # Display tray icons
    tray_output none

    # bar's colors
    colors {
	
	# Statusline's colors
        background #282c34
        statusline #abb2bf
        separator  #abb2bf
	
	# Workspace's colors
        #colorclass        border  background text
        focused_workspace  #98c379 #98c379    #282c34
        active_workspace   #98c379 #98c379    #282c34
        inactive_workspace #282c34 #282c34    #abb2bf
        urgent_workspace   #2f343a #e06c75    #abb2bf
        binding_mode       #2f343a #e06c75    #abb2bf
    }
}

# Execute programs

# Set background image
exec --no-startup-id feh --bg-scale /home/sdk/Pictures/Wallpapers/fox.jpg
