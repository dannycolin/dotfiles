# i3 config file

# Set the Super key as my mod key.
set $mod Mod4

# Default font
# Workaround: Set font size to 0  to disable window title in tabbed and stacked mode
font pango:monospace 0

# Define 16-colors palette

# black
set $color1     "#282c34"
# red
set $color2     "#e06c75"
# green
set $color3     "#98c379"
# yellow
set $color4     "#e5c07b"
# blue
set $color5     "#61afef"
# magenta
set $color6     "#c678dd"
# cyan
set $color7     "#56b6c2"
# white
set $color8     "#abb2bf"
# gutter grey
set $color9     "#4b5263"
# dark red
set $color10    "#be5046"
# green
set $color11    "#98c379"
# dark yellow
set $color12    "#d19a66"
# blue
set $color13    "#61afef"
# magenta
set $color14    "#c678dd"
# cyan
set $color15    "#56b6c2"
# comment grey
set $color16    "#5c6370"

# Windows colors
# class                     border  backgr. text    indicator child_border
client.focused              $color3 $color3 $color1 $color3   $color3
client.focused_inactive     $color9 $color1 $color8 $color1   $color9
client.unfocused            $color9 $color1 $color8 $color1   $color9
client.urgent               $color2 $color2 $color8 $color2   $color2

client.background           $color1

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Take a screenshot
bindsym $mod+Print exec scrot "/home/sdk/Pictures/%Y_%m_%d_at_%H_%M_%S_screenshot.png"

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.

bindsym $mod+d exec --no-startup-id rofi -show drun

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# focus follows mouse
focus_follows_mouse no

# delaying urgeny hint reset on workspace change
force_display_urgency_hint 2500 ms

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# switch to workspace
bindsym $mod+1 workspace 1:files
bindsym $mod+2 workspace 2:term
bindsym $mod+3 workspace 3:web
bindsym $mod+4 workspace 4:mail
bindsym $mod+5 workspace 5:code
bindsym $mod+6 workspace 6:chat
bindsym $mod+7 workspace 7:misc
bindsym $mod+8 workspace 8:misc
bindsym $mod+9 workspace 9:misc

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1:files
bindsym $mod+Shift+2 move container to workspace 2:term
bindsym $mod+Shift+3 move container to workspace 3:web
bindsym $mod+Shift+4 move container to workspace 4:mail
bindsym $mod+Shift+5 move container to workspace 5:code
bindsym $mod+Shift+6 move container to workspace 6:chat
bindsym $mod+Shift+7 move container to workspace 7:misc
bindsym $mod+Shift+8 move container to workspace 8:misc
bindsym $mod+Shift+9 move container to workspace 9:misc

# switch to next/prev workspace
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# Automatically putting clients on specific workspaces

assign [class="^Firefox$"] 3:web
assign [class="^Hexchat$"] 6:chat
assign [class="^Pcmanfm$"] 1:files
assign [class="^Thunderbird$"] 4:mail
assign [class="^UXTerm$"] 2:term
assign [class="vim"] 5:code

# Disable window title
new_window pixel 4
new_float pixel 4

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# --------------------
# Custom mode
# --------------------

# system mode
mode "system" {
    # current session (e) exit (l) lock (r) reboot (p) poweroff
    bindsym e exec i3-msg exit
    bindsym l exec i3lock -c "#282c34", mode "default"
    bindsym r exec systemctl reboot
    bindsym p exec systemctl poweroff

    #back to normal mode by pressing Esc
    bindsym Escape mode "default"
}

bindsym $mod+s mode "system"

# resize mode
mode "resize" {
    # resize window (you can also use the mouse for that)
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # back to normal mode by pressing Esc
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# window mode
mode "window" {
    # change window display (s) horizontal/vertical split (t) tabbed
    bindsym s layout toggle split, mode "default"
    bindsym t layout tabbed, mode "default"
    bindsym f fullscreen toggle, mode "default"
    # back to normal mode by pressing Esc
    bindsym Escape mode "default"
}

bindsym $mod+w mode "window"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    # Custom separator symbol
    separator_symbol " "
    
    # Position of the bar on the screen [top|bottom]
    position top

    # Display informations in the bar
    status_command i3status

    # Font of the bar
    font pango:monospace 11

    # Display tray icons
    tray_output none
    
    # bar's colors
    colors {
	
	# Statusline's colors
        background $color1
        statusline $color8
        separator  $color8
	
	# Workspace's colors
        #colorclass        border  background text
        focused_workspace  $color3 $color3    $color1
        active_workspace   $color3 $color3    $color1
        inactive_workspace $color1 $color1    $color8
        urgent_workspace   $color2 $color2    $color1
        binding_mode       $color5 $color5    $color1
    }
}

# Execute programs

# Set background image
exec --no-startup-id feh --bg-scale /home/sdk/Pictures/Wallpapers/fox.jpg
