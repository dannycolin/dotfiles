general {
  output_format = "i3bar"

  # Colors settings
  colors = true

  color_good      = "#c8ccd4"
  color_degraded  = "#c8ccd4" 
  color_bad       = "#e06c75"

  # Refresh rate
  interval = 5
}

# Display order
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "volume master"
order += "tztime montreal"

wireless _first_ {
  format_up = "W:%quality [%essid]"
  format_down = ""
}

ethernet _first_ {
  format_up = "E: Connected"
  format_down = ""
}

battery all {
  format = "B: %percentage [%status]"
  format_down = ""
  status_chr = "Charging"
  status_bat = "Discharging"
  status_unk = "Unknown"
  status_full = "Full"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 20
  threshold_type = percentage
	last_full_capacity = true
  integer_battery_capacity = true
}

volume master {
  format = "V: %volume"
  format_muted = "V: 0%%"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

tztime montreal {
  format = "%a %d %b %H:%M "
  timezone = "America/New_York"
}

