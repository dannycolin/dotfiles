# i3 config file

# Set the Super key as my mod key.
set $mod Mod4

# Define font properties
set_from_resource $font-family i3wm.faceName monospace
set_from_resource $font-size i3wm.faceSize 12

# Default font
# Workaround: Set font size to 0 to disable window title in tabbed and stacked mode
font pango:$font-family 0 

# Define 16-colors palette
set $base00 #282c34
set $base01 #353b45
set $base02 #3e4451
set $base03 #545862
set $base04 #565c64
set $base05 #abb2bf
set $base06 #b6bdca
set $base07 #c8ccd4
set $base08 #e06c75
set $base09 #d19a66
set $base0A #e5c07b
set $base0B #98c379
set $base0C #56b6c2
set $base0D #61afef
set $base0E #c678dd
set $base0F #be5046

# Basic bar configuration using the Base16 variables.
bar {
    # Custom separator symbol
    separator_symbol " "
    
    # Position of the bar on the screen [top|bottom]
    position top

    # Display informations in the bar
    status_command i3status

    # Font of the bar
    font pango:$font-family $font-size

    # Display tray icons
    tray_output none
 
    colors {
        background $base00
        separator  $base00
        statusline $base07

        # State             Border  BG      Text
        focused_workspace   $base0D $base0D $base00
        active_workspace    $base03 $base03 $base00
        inactive_workspace  $base00 $base00 $base07
        urgent_workspace    $base08 $base08 $base00
        binding_mode        $base0A $base0A $base00
    }
}

# Basic color configuration using the Base16 variables for windows and borders.
# Property Name         Border  BG      Text    Indicator Child Border
client.focused          $base05 $base0D $base00 $base0D $base0D
client.focused_inactive $base01 $base01 $base05 $base03 $base01
client.unfocused        $base01 $base00 $base05 $base01 $base01
client.urgent           $base08 $base08 $base00 $base08 $base08
client.placeholder      $base00 $base00 $base05 $base00 $base00
client.background $base07

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Take a screenshot
bindsym $mod+Print exec scrot "/home/sdk/Pictures/%Y_%m_%d_at_%H_%M_%S_screenshot.png"

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# Show rofi application menu
bindsym $mod+a exec --no-startup-id rofi -show drun

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# focus follows mouse
focus_follows_mouse no

# delaying urgeny hint reset on workspace change
force_display_urgency_hint 2500 ms

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# set workspace
set $w1 1:files
set $w2 2:term
set $w3 3:web
set $w4 4:mail
set $w5 5:code
set $w6 6:chat
set $w7 7:graph
set $w8 8:misc
set $w9 9:misc

# switch to workspace
bindsym $mod+1 workspace $w1
bindsym $mod+2 workspace $w2
bindsym $mod+3 workspace $w3
bindsym $mod+4 workspace $w4
bindsym $mod+5 workspace $w5
bindsym $mod+6 workspace $w6
bindsym $mod+7 workspace $w7
bindsym $mod+8 workspace $w8
bindsym $mod+9 workspace $w9

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $w1
bindsym $mod+Shift+2 move container to workspace $w2
bindsym $mod+Shift+3 move container to workspace $w3
bindsym $mod+Shift+4 move container to workspace $w4
bindsym $mod+Shift+5 move container to workspace $w5
bindsym $mod+Shift+6 move container to workspace $w6
bindsym $mod+Shift+7 move container to workspace $w7
bindsym $mod+Shift+8 move container to workspace $w8
bindsym $mod+Shift+9 move container to workspace $w9

# switch to next/prev workspace
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# Automatically putting clients on specific workspaces

assign [class="^Pcmanfm$"]      $w1
assign [class="^UXTerm$"]       $w2
assign [class="Firefox"]        $w3
assign [class="^Sylpheed$"]     $w4
assign [class="^Mumble$"]       $w6
assign [class="Gimp"]           $w7
assign [class="^Inkscape$"]     $w7
# To detect terminal app, we need a .desktop where the exec line
# looks like :
#
#   uxterm -class <name> -e <program_name> <options>
assign [class="^vifm$"] $w1
assign [class="^vim$"]  $w5

# Disable window title
new_window pixel 4
new_float pixel 4

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# control volume
bindsym XF86AudioLowerVolume exec --no-startup-id "pactl set-sink-mute alsa_output.pci-0000_00_1b.0.analog-stereo false; pactl set-sink-volume 0 -5%"
bindsym XF86AudioRaiseVolume exec --no-startup-id "pactl set-sink-mute alsa_output.pci-0000_00_1b.0.analog-stereo false; pactl set-sink-volume 0 +5%"
bindsym XF86AudioMute exec --no-startup-id "pactl set-sink-mute alsa_output.pci-0000_00_1b.0.analog-stereo toggle"
bindsym XF86AudioMicMute exec --no-startup-id "pactl set-source-mute alsa_input.pci-0000_00_1b.0.analog-stereo toggle"

# control brightness
bindsym XF86MonBrightnessDown exec --no-startup-id "xbacklight -dec 10"
bindsym XF86MonBrightnessUp exec --no-startup-id "xbacklight -inc 10"

# toggle touchpad
bindsym XF86LaunchA exec --no-startup-id "touchpad-ctrl"

# --------------------
# Custom mode
# --------------------

# system mode
mode "system" {
    # current session (e) exit (l) lock (r) reboot (p) poweroff
    bindsym e exec i3-msg exit
    # bindsym l exec i3lock -c "#282c34", mode "default"
    bindsym l exec i3lock -i "/home/sdk/Pictures/Wallpapers/current-blur.png", mode "default"
    bindsym r exec systemctl reboot
    bindsym p exec systemctl poweroff

    #back to normal mode by pressing Esc
    bindsym Escape mode "default"
}

bindsym $mod+Shift+s mode "system"

# resize mode
mode "resize" {
    # resize window (you can also use the mouse for that)
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # back to normal mode by pressing Esc
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# window mode
mode "window" {
    # change window display (s) horizontal/vertical split (t) tabbed
    bindsym s layout toggle split, mode "default"
    bindsym t layout tabbed, mode "default"
    bindsym f fullscreen toggle, mode "default"
    
    # Split workspace
    bindsym h split h, mode "default"
    bindsym v split v, mode "default"

    # focus the parent/child container
    bindsym $mod+p focus parent, mode "default"
    bindsym $mod+c focus child, mode "default"

    # back to normal mode by pressing Esc
    bindsym Escape mode "default"
}

bindsym $mod+w mode "window"

# Execute programs

# Set background image
exec --no-startup-id feh --bg-scale /home/sdk/Pictures/Wallpapers/current.jpg
