# i3 config file

# Set the Super key as my mod key.
set $mod Mod4

# Define font properties
set_from_resource $font-family i3wm.faceName monospace
set_from_resource $font-size i3wm.faceSize 12

# Default font
# Workaround: Set font size to 0 to disable window title in tabbed and stacked mode
font pango:$font-family 0 

# Define 16-colors palette

# black
set_from_resource $color0 i3wm.color0 #000000
set_from_resource $color8 i3wm.color8 #000000

# red
set_from_resource $color1 i3wm.color1 #FF0000
set_from_resource $color9 i3wm.color9 #FF0000

# green
set_from_resource $color2 i3wm.color2 #00FF00
set_from_resource $color10 i3wm.color10 #00FF00

# yellow
set_from_resource $color3 i3wm.color3 #FFFF00
set_from_resource $color11 i3wm.color11 #FFFF00

# blue
set_from_resource $color4 i3wm.color4 #0000FF
set_from_resource $color12 i3wm.color12 #0000FF

# magenta
set_from_resource $color5 i3wm.color5 #FF00FF
set_from_resource $color13 i3wm.color13 #FF00FF

# cyan
set_from_resource $color6 i3wm.color6 #00FFFF
set_from_resource $color14 i3wm.color14 #00FFFF

# white
set_from_resource $color7 i3wm.color7 #FFFFFF
set_from_resource $color15 i3wm.color15 #FFFFFF

# Windows colors
# class                     border  backgr. text    indicator child_border
client.focused              $color10 $color10 $color10 $color10   $color10
client.focused_inactive     $color8 $color8 $color8 $color8   $color8
client.unfocused            $color8 $color8 $color8 $color8   $color8
client.urgent               $color1 $color1 $color1 $color1   $color1

client.background           $color0

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Take a screenshot
bindsym $mod+Print exec scrot "/home/sdk/Pictures/%Y_%m_%d_at_%H_%M_%S_screenshot.png"

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.

bindsym $mod+d exec --no-startup-id rofi -show drun

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# focus follows mouse
focus_follows_mouse no

# delaying urgeny hint reset on workspace change
force_display_urgency_hint 2500 ms

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# set workspace
set $w1 1:files
set $w2 2:term
set $w3 3:web
set $w4 4:mail
set $w5 5:code
set $w6 6:chat
set $w7 7:misc
set $w8 8:misc
set $w9 9:misc

# switch to workspace
bindsym $mod+1 workspace $w1
bindsym $mod+2 workspace $w2
bindsym $mod+3 workspace $w3
bindsym $mod+4 workspace $w4
bindsym $mod+5 workspace $w5
bindsym $mod+6 workspace $w6
bindsym $mod+7 workspace $w7
bindsym $mod+8 workspace $w8
bindsym $mod+9 workspace $w9

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $w1
bindsym $mod+Shift+2 move container to workspace $w2
bindsym $mod+Shift+3 move container to workspace $w3
bindsym $mod+Shift+4 move container to workspace $w4
bindsym $mod+Shift+5 move container to workspace $w5
bindsym $mod+Shift+6 move container to workspace $w6
bindsym $mod+Shift+7 move container to workspace $w7
bindsym $mod+Shift+8 move container to workspace $w8
bindsym $mod+Shift+9 move container to workspace $w9

# switch to next/prev workspace
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# Automatically putting clients on specific workspaces

assign [class="Firefox"] $w3
assign [class="^Mumble$"] $w6
assign [class="^Pcmanfm$"] $w1
assign [class="^Thunderbird$"] $w4
assign [class="^UXTerm$"] $w2
# To detect terminal app, we need a .desktop where the exec line
# looks like :
#
#   uxterm -class <name> -e <program_name> <options>
assign [class="^vifm$"] $w1
assign [class="^vim$"] $w5

# Disable window title
new_window pixel 4
new_float pixel 4

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# control volume
bindsym XF86AudioLowerVolume exec --no-startup-id "pactl set-sink-mute alsa_output.pci-0000_00_1b.0.analog-stereo false; pactl set-sink-volume 0 -5%"
bindsym XF86AudioRaiseVolume exec --no-startup-id "pactl set-sink-mute alsa_output.pci-0000_00_1b.0.analog-stereo false; pactl set-sink-volume 0 +5%"
bindsym XF86AudioMute exec --no-startup-id "pactl set-sink-mute alsa_output.pci-0000_00_1b.0.analog-stereo toggle"
bindsym XF86AudioMicMute exec --no-startup-id "pactl set-source-mute alsa_input.pci-0000_00_1b.0.analog-stereo toggle"

# control brightness
bindsym XF86MonBrightnessDown exec --no-startup-id "xbacklight -dec 10"
bindsym XF86MonBrightnessUp exec --no-startup-id "xbacklight -inc 10"

# --------------------
# Custom mode
# --------------------

# system mode
mode "system" {
    # current session (e) exit (l) lock (r) reboot (p) poweroff
    bindsym e exec i3-msg exit
    # bindsym l exec i3lock -c "#282c34", mode "default"
    bindsym l exec i3lock -i "/home/sdk/Pictures/Wallpapers/fox-blur.png", mode "default"
    bindsym r exec systemctl reboot
    bindsym p exec systemctl poweroff

    #back to normal mode by pressing Esc
    bindsym Escape mode "default"
}

bindsym $mod+Shift+s mode "system"

# resize mode
mode "resize" {
    # resize window (you can also use the mouse for that)
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # back to normal mode by pressing Esc
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# window mode
mode "window" {
    # change window display (s) horizontal/vertical split (t) tabbed
    bindsym s layout toggle split, mode "default"
    bindsym t layout tabbed, mode "default"
    bindsym f fullscreen toggle, mode "default"
    # back to normal mode by pressing Esc
    bindsym Escape mode "default"
}

bindsym $mod+w mode "window"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    # Custom separator symbol
    separator_symbol " "
    
    # Position of the bar on the screen [top|bottom]
    position top

    # Display informations in the bar
    status_command i3status

    # Font of the bar
    font pango:$font-family $font-size

    # Display tray icons
    tray_output none
    
    # bar's colors
    colors {
	
	# Statusline's colors
        background $color0
        statusline $color15
        separator  $color0
	
	# Workspace's colors
        #colorclass        border   background text
        focused_workspace  $color10 $color10   $color0
        active_workspace   $color10 $color10   $color0
        inactive_workspace $color0  $color0    $color15
        urgent_workspace   $color9  $color9    $color0
        binding_mode       $color12 $color12   $color0
    }
}

# Execute programs

# Set background image
exec --no-startup-id feh --bg-scale /home/sdk/Pictures/Wallpapers/fox.jpg
