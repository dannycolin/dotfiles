[module/volume]

type = internal/pulseaudio

use-ui-max = false

format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>

label-volume = V: %percentage%%
label-muted = V: %percentage%% [m]

ramp-volume-font = 1

ramp-volume-0 = ${theme/icons.volume-low}
ramp-volume-1 = ${theme/icons.volume-medium}
ramp-volume-2 = ${theme/icons.volume-high}

