#!/bin/bash 

# Set the window state depending on its type. By default, normal windows are 
# setted tiled and dialog are setted to floating
# 
# For a list of all window types see: 
#   https://standards.freedesktop.org/wm-spec/latest/ar01s05.html

wid=$1
class=$2
instance=$3

if [[ "$(xwinfo -t $wid)" == "normal" ]]; then
  printf "state=tiled"
elif [[ "$(xwinfo -t $wid)" == "dialog" ]]; then
  printf "state=floating"
fi
