!--------------------!
! .Xresources config !
!--------------------!

! Set font properties
*.faceName: DejaVu Sans Mono for Powerline
*.faceSize: 12

! Save X numbers of line in history
*.saveLines: 16384

! select to CLIPBOARD instead of PRIMARY
*.selectToClipboard: true

! consider URL as words when triple clicking on it
*charClass: 33:48,37-38:48,45-47:48,64:48,58:48,126:48,61:48,63:48,43:48,35:48

! Custom keybindings
*.translations: #override \n\
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n\
    Shift <Btn1Up>: exec-formatted("firefox '%t'", CLIPBOARD) select-start() select-end()

