!--------------------!
! .Xresources config !
!--------------------!

*.faceName: DejaVu Sans Mono for Powerline
*.faceSize: 12
*.vt100*geometry: 80x60
*.saveLines: 16384
*.loginShell: true
*.charClass: 33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48
*.termName: xterm-256color
*.eightBitInput: false
*.VT100.allowWindowOps: true
*.VT100.allowTitleOps: true
*.VT100.allowFontOps: true
*.VT100.selectToClipboard: true
*.VT100*translations: #override \n\
    Ctrl Shift <Key>V:  insert-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>C:        select-end(CLIPBOARD)
    <Btn1Up>: select-end(PRIMARY, CLIPBOARD, CUT_BUFFER0)

!-------------!
! Colorscheme !
!-------------!

! special
*foreground:   #d7d3cb
*background:   #282c34
*cursorColor:  #d7d3cb

! black
*color0:       #282c34
*color8:       #4a4e56

! red
*color1:       #be5046
*color9:       #e06c75

! green
*color2:       #76a74a
*color10:      #98c379

! yellow
*color3:       #c3a44c
*color11:      #e5c07b

! blue
*color4:       #3f93c0
*color12:      #61afef

! magenta
*color5:       #a45cae
*color13:      #c678dd

! cyan
*color6:       #349a93
*color14:      #56b6c2

! white
*color7:       #b5b1a9
*color15:      #d7d3cb

